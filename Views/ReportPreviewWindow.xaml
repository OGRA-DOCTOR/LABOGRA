<Window x:Class="LABOGRA.Views.ReportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABOGRA.Views"
        mc:Ignorable="d"
        Title="معاينة تقرير المريض" Height="750" Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderTextStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueTextStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,3,0,3"/>
        </Style>
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- عنوان التقرير -->
            <RowDefinition Height="Auto"/>
            <!-- بيانات المريض -->
            <RowDefinition Height="Auto"/>
            <!-- عنوان قسم النتائج -->
            <RowDefinition Height="*"/>
            <!-- جدول النتائج -->
            <RowDefinition Height="Auto"/>
            <!-- الأزرار -->
            <RowDefinition Height="Auto"/>
            <!-- رسالة التحميل (اختياري) -->
        </Grid.RowDefinitions>

        <!-- 1. عنوان التقرير -->
        <TextBlock Grid.Row="0" Text="تقرير نتائج تحاليل المريض" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- 2. بيانات المريض -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم المريض:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PatientNameTextBlock" Style="{StaticResource ValueTextStyle}"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="رقم المريض:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="PatientIdTextBlock" Style="{StaticResource ValueTextStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="النوع:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="GenderTextBlock" Style="{StaticResource ValueTextStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="العمر:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="AgeTextBlock" Style="{StaticResource ValueTextStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="الطبيب المعالج:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReferringPhysicianTextBlock" Style="{StaticResource ValueTextStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="تاريخ الطلب:" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="OrderDateTextBlock" Style="{StaticResource ValueTextStyle}"/>
            </Grid>
        </Border>

        <!-- 3. عنوان قسم النتائج -->
        <TextBlock Grid.Row="2" Text="نتائج التحاليل:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- 4. جدول النتائج (تم التعديل هنا بإزالة ColumnHeaderStyle) -->
        <DataGrid Grid.Row="3" x:Name="ResultsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                  ItemsSource="{Binding LabOrderItems}" CanUserAddRows="False" BorderBrush="LightGray" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="اسم التحليل" Binding="{Binding Test.Name}" Width="3*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="النتيجة" Binding="{Binding Result}" Width="2*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="الوحدة" Binding="{Binding ResultUnit}" Width="1*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="القيمة المرجعية" Binding="{Binding ReferenceRange}" Width="3*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 5. الأزرار -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="PrintButton" Content="طباعة التقرير" Click="PrintButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Foreground="White"/>
            <Button x:Name="SavePdfButton" Content="حفظ كـ PDF" Click="SavePdfButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#2196F3" Foreground="White"/>
            <Button x:Name="CloseButton" Content="إغلاق" Click="CloseButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#f44336" Foreground="White"/>
        </StackPanel>

        <!-- 6. رسالة التحميل (اختياري، يمكن تفعيله عند الحاجة) -->
        <Border Grid.Row="5" Background="#99FFFFFF" Visibility="Collapsed" x:Name="LoadingOverlay">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="جاري العمل..." FontSize="18" FontWeight="SemiBold"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>