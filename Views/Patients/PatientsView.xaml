<UserControl x:Class="LABOGRA.Views.Patients.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LABOGRA.Views.Patients"
             xmlns:viewmodels="clr-namespace:LABOGRA.ViewModels" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:PatientsViewModel, IsDesignTimeCreatable=False}" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="#EAF2FA"
             FlowDirection="RightToLeft">
    <!-- التغيير: إضافة IsDesignTimeCreatable=False إلى d:DataContext -->
    <!-- هذا قد يساعد المصمم إذا كان الـ ViewModel يحتاج لـ DbContext في منشئه -->

    <!-- ... بقية الكود كما هو في الإصدار 8 ... -->
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,15,0">

            <TextBlock FontSize="22" FontWeight="Bold" Foreground="#1E90FF"
                        HorizontalAlignment="Center" Margin="0,0,0,15">
                 <Run Text="إدارة المرضى"/>
                 <Run Text=" "/>
                 <Run Text="(إضافة مريض جديد)" FlowDirection="LeftToRight"/>
            </TextBlock>

            <!-- ... (بقية محتوى الواجهة كما كان) ... -->
            <Border BorderBrush="#4682B4" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="بيانات المريض" FontSize="16" FontWeight="Bold" Foreground="#1E90FF" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="اللقب:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Width="80" Height="25" Margin="0,0,2,0" IsEditable="True"
                                           ItemsSource="{Binding Titles}" SelectedItem="{Binding SelectedTitle}"/>
                        <TextBlock Text="الاسم:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="180" Height="25" Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>

                        <TextBlock Text="النوع:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <RadioButton Content="ذكر" GroupName="GenderGroup" IsChecked="{Binding IsMaleSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton Content="أنثى" GroupName="GenderGroup" IsChecked="{Binding IsFemaleSelected}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="العمر:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="50" Height="25" Text="{Binding AgeValueInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,2,0"/>
                        <ComboBox Width="70" Height="25" Margin="0,0,20,0"
                                           ItemsSource="{Binding AgeUnits}" SelectedItem="{Binding SelectedAgeUnit}"/>

                        <TextBlock Text="الرقم الطبي:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="180" Height="25" Text="{Binding MedicalRecordNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="المحمول:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="150" Height="25" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>

                        <TextBlock Text="الإيميل:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="200" Height="25" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="#4682B4" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="بيانات الطبيب أو الجهة" FontSize="16" FontWeight="Bold" Foreground="#1E90FF" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="جهة التحويل:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Width="250" Height="25" Margin="0,0,10,0"
                                           ItemsSource="{Binding ReferringPhysicians}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedReferringPhysician}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="حفظ المريض وتحاليله"
                     Width="200" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center"
                     Command="{Binding SavePatientCommand}"
                     Background="#FF4500" Foreground="White" FontSize="16" FontWeight="Bold">
                <Button.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="8" Direction="270"/>
                </Button.Effect>
            </Button>

        </StackPanel>

        <Grid Grid.Column="1" Margin="10,0,0,0" MinWidth="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="قائمة التحاليل" FontSize="16" FontWeight="Bold" Foreground="#1E90FF" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,5,0">
                    <TextBlock Text="التحاليل المتاحة:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <ListView Height="400" ItemsSource="{Binding AvailableTests}" SelectedItem="{Binding SelectedAvailableTest}" BorderBrush="#4682B4" BorderThickness="1">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FlowDirection="LeftToRight"> 
                                       <Run Text="{Binding Name}"/>
                                       <Run Text=" ("/>
                                       <Run Text="{Binding Abbreviation, FallbackValue=''}"/>
                                       <Run Text=")"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding AddSelectedTestCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,0,0">
                    <TextBlock Text="التحاليل المختارة لهذا المريض:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTests.Count, StringFormat='التحاليل المختارة: {0}'}" HorizontalAlignment="Right" Margin="0,0,0,5"/>
                    <ListView Height="400" ItemsSource="{Binding SelectedTests}" SelectedItem="{Binding SelectedTestForRemoval}" BorderBrush="#4682B4" BorderThickness="1">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FlowDirection="LeftToRight"> 
                                       <Run Text="{Binding Name}"/>
                                       <Run Text=" ("/>
                                       <Run Text="{Binding Abbreviation, FallbackValue=''}"/>
                                       <Run Text=")"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding RemoveSelectedTestCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="إضافة تحليل" Width="100" Height="30" Margin="0,0,5,0"
                         Command="{Binding AddSelectedTestCommand}" Background="#4682B4" Foreground="White" FontWeight="Bold"/>
                <Button Content="حذف تحليل" Width="100" Height="30" Margin="5,0,5,0"
                         Command="{Binding RemoveSelectedTestCommand}" Background="#4682B4" Foreground="White" FontWeight="Bold"/>
                <Button Content="إضافة الكل" Width="100" Height="30" Margin="5,0,0,0"
                         Command="{Binding AddAllTestsCommand}" Background="#4682B4" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>