<!-- الإصدار: 6 (لهذا الملف - إعادة تنظيم تخطيط بيانات المريض بدقة أكبر باستخدام Grid حسب الطلب) -->
<!-- اسم الملف: PatientsView.xaml -->
<!-- الوصف: واجهة تسجيل المرضى مع إعادة تنظيم قسم بيانات المريض ليطابق التخطيط المطلوب لجميع الحقول، وتغيير النصوص إلى الإنجليزية في النوع ووحدة العمر. -->
<UserControl x:Class="LABOGRA.Views.Patients.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LABOGRA.Views.Patients"
             xmlns:viewmodels="clr-namespace:LABOGRA.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="#EAF2FA"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <!-- (الأنماط كما كانت - لم تتغير) -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#673AB7"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF4500"/>
        <SolidColorBrush x:Key="LightBackground" Color="#EAF2FA"/>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>
        <!-- إضافة محول Visibility للـ GeneratedId -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2" VerticalAlignment="Top" Height="50" Margin="0,-10,0,0">
            <Border Background="{StaticResource PrimaryPurple}" Height="50" VerticalAlignment="Top">
                <TextBlock Text="تسجيل المرضى" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- هذا الـ StackPanel الرئيسي يحتوي على أقسام بيانات المريض، وبيانات الطبيب المدمجة، وزر الحفظ -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,50,15,0">

            <!-- قسم بيانات المريض (يشمل الآن بيانات الطبيب المحول) -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel Orientation="Vertical">
                    <!-- العنوان يبقى "بيانات المريض" بالرغم من دمج حقل المحول من -->
                    <TextBlock Text="بيانات المريض" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- استخدام Grid لتنظيم الحقول الداخلية بدقة حسب الطلب -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Col 0: Label (e.g. الاسم) -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Col 1: Input Part 1 (e.g. اللقب) -->
                            <ColumnDefinition Width="*"/>
                            <!-- Col 2: Input Part 2 (e.g. الاسم) -->
                            <ColumnDefinition Width="20"/>
                            <!-- Col 3: Spacer -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Col 4: Label (e.g. العمر) -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Col 5: Input Part 3 (e.g. قيمة العمر) -->
                            <ColumnDefinition Width="*"/>
                            <!-- Col 6: Input Part 4 (e.g. وحدة العمر) -->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Row 0: Name (Title+Name), Age (Value+Unit) -->
                            <RowDefinition Height="Auto"/>
                            <!-- Row 1: Gender, Medical Record Number -->
                            <RowDefinition Height="Auto"/>
                            <!-- Row 2: Phone, Email -->
                            <RowDefinition Height="Auto"/>
                            <!-- Row 3: Referred By -->
                            <RowDefinition Height="Auto"/>
                            <!-- Row 4: Generated ID -->
                        </Grid.RowDefinitions>

                        <!-- Row 0: Name (Title+Name) and Age (Value+Unit) -->
                        <!-- الاسم: -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Width="80" Style="{StaticResource ComboBoxStyle}" Margin="0,5,5,5" IsEditable="True" ItemsSource="{Binding Titles}" SelectedItem="{Binding SelectedTitle}"/>
                        <!-- تم توسيع حقل الاسم اليدوي (Grid.Column="2" هو '*' وياخذ المساحة المتبقية) -->
                        <TextBox Grid.Row="0" Grid.Column="2" Style="{StaticResource InputFieldStyle}" Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                        <GridSplitter Grid.Row="0" Grid.Column="3" Width="20" HorizontalAlignment="Stretch"/>
                        <!-- Spacer -->

                        <!-- العمر: -->
                        <TextBlock Grid.Row="0" Grid.Column="4" Text="العمر:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <TextBox Grid.Row="0" Grid.Column="5" Width="50" Style="{StaticResource InputFieldStyle}" Text="{Binding AgeValueInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,2,5"/>
                        <!-- AgeUnits ItemsSource سيتم تحديثها في ViewModel -->
                        <ComboBox Grid.Row="0" Grid.Column="6" Width="70" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" ItemsSource="{Binding AgeUnits}" SelectedItem="{Binding SelectedAgeUnit}"/>


                        <!-- Row 1: Gender and Medical Record Number -->
                        <!-- النوع: -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="النوع:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <!-- يمتد عبر العمودين المخصصين للحقول في الجزء الأول (Col 1 و Col 2) -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,5">
                            <!-- تم تغيير المحتوى إلى الإنجليزية -->
                            <RadioButton Content="Male" GroupName="GenderGroup" IsChecked="{Binding IsMaleSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton Content="Female" GroupName="GenderGroup" IsChecked="{Binding IsFemaleSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton Content="Unknown" GroupName="GenderGroup" IsChecked="{Binding IsUnknownSelected}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <GridSplitter Grid.Row="1" Grid.Column="3" Width="20" HorizontalAlignment="Stretch"/>
                        <!-- Spacer -->

                        <!-- الرقم الطبي: -->
                        <TextBlock Grid.Row="1" Grid.Column="4" Text="الرقم الطبي:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <!-- يمتد عبر العمودين المخصصين للحقول في الجزء الثاني (Col 5 و Col 6) -->
                        <TextBox Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" Style="{StaticResource InputFieldStyle}" Text="{Binding MedicalRecordNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                        <!-- Row 2: Phone and Email -->
                        <!-- المحمول: -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="المحمول:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <!-- يمتد عبر العمودين المخصصين للحقول في الجزء الأول -->
                        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource InputFieldStyle}" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                        <GridSplitter Grid.Row="2" Grid.Column="3" Width="20" HorizontalAlignment="Stretch"/>
                        <!-- Spacer -->

                        <!-- الإيميل: -->
                        <TextBlock Grid.Row="2" Grid.Column="4" Text="الإيميل:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <!-- يمتد عبر العمودين المخصصين للحقول في الجزء الثاني -->
                        <TextBox Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="2" Style="{StaticResource InputFieldStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5"/>

                        <!-- Row 3: Referred By (مُحوَّل من) - دمجها في نفس Grid حسب الطلب -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="مُحوَّل من:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                        <!-- يمتد عبر كل الأعمدة المتبقية (Col 1 إلى Col 6) -->
                        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="6" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" ItemsSource="{Binding ReferringPhysicians}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedReferringPhysician}" IsEditable="True" Text="{Binding CustomReferringPhysicianName, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Row 4: Generated ID - يبقى كما هو -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="7" Orientation="Horizontal" Margin="0,5,0,5"
                                    Visibility="{Binding DisplayGeneratedId, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}">
                            <TextBlock Text="ID النظام:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold" Foreground="DarkSlateGray"/>
                            <TextBox Width="180" Style="{StaticResource InputFieldStyle}" Text="{Binding DisplayGeneratedId, Mode=OneWay}" IsReadOnly="True" Background="#EEEEEE"/>
                        </StackPanel>

                    </Grid>
                </StackPanel>
            </Border>

            <!-- قسم بيانات الطبيب أو الجهة الأصلي تم دمجه أعلاه، لذا هذا الجزء تم حذفه -->
            <!-- زر الحفظ (لم يتغير) -->
            <Button Content="حفظ المريض وتحاليله" Width="200" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center" Command="{Binding SavePatientCommand}" Background="{StaticResource AccentOrange}" Foreground="White" FontSize="16" FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="8" Direction="270"/>
                </Button.Effect>
            </Button>

        </StackPanel>

        <!-- قسم قائمة التحاليل (لم يتغير) -->
        <Grid Grid.Column="1" Margin="10,50,0,0" Width="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="قائمة التحاليل" Style="{StaticResource SectionHeaderStyle}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,5,0">
                    <TextBlock Text="التحاليل المتاحة:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <Border BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" CornerRadius="3">
                        <ListView Height="400" ItemsSource="{Binding AvailableTests}" SelectedItem="{Binding SelectedAvailableTest}" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden" BorderThickness="0" Width="215">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FlowDirection="LeftToRight" TextTrimming="CharacterEllipsis" Width="185"> <Run Text="{Binding Name}"/> <Run Text=" ("/> <Run Text="{Binding Abbreviation, FallbackValue=''}"/> <Run Text=")"/></TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding AddSelectedTestCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="التحاليل المختارة لهذا المريض:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedTests.Count, StringFormat='({0})'}" HorizontalAlignment="Right" Margin="5,0,0,0"/>
                    </StackPanel>
                    <Border BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" CornerRadius="3">
                        <ListView Height="400" ItemsSource="{Binding SelectedTests}" SelectedItem="{Binding SelectedTestForRemoval}" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden" BorderThickness="0" Width="215">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FlowDirection="LeftToRight" TextTrimming="CharacterEllipsis" Width="185"> <Run Text="{Binding Name}"/> <Run Text=" ("/> <Run Text="{Binding Abbreviation, FallbackValue=''}"/> <Run Text=")"/></TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding RemoveSelectedTestCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="إضافة تحليل" Style="{StaticResource ActionButtonStyle}" Command="{Binding AddSelectedTestCommand}"/>
                <Button Content="حذف تحليل" Style="{StaticResource ActionButtonStyle}" Command="{Binding RemoveSelectedTestCommand}"/>
                <Button Content="إضافة الكل" Style="{StaticResource ActionButtonStyle}" Command="{Binding AddAllTestsCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>