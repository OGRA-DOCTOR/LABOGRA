<UserControl x:Class="LABOGRA.Views.Patients.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LABOGRA.Views.Patients"
             xmlns:viewmodels="clr-namespace:LABOGRA.ViewModels" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:PatientsViewModel, IsDesignTimeCreatable=False}" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="#EAF2FA"
             FlowDirection="RightToLeft">
    
    <UserControl.Resources>
        <!-- تعريف الألوان الرئيسية المستخدمة في التطبيق -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#673AB7"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF4500"/>
        <SolidColorBrush x:Key="LightBackground" Color="#EAF2FA"/>
        
        <!-- أنماط للأزرار -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- أنماط للحقول -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <!-- أنماط للعناوين -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- أنماط للحاويات -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- عنوان رئيسي -->
        <Grid Grid.ColumnSpan="2" VerticalAlignment="Top" Height="50" Margin="0,-10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{StaticResource PrimaryPurple}" Height="50" VerticalAlignment="Top">
                <TextBlock Text="تسجيل المرضى" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,50,15,0">
            <!-- بيانات المريض -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="بيانات المريض" Style="{StaticResource SectionHeaderStyle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="اللقب:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Width="80" Style="{StaticResource ComboBoxStyle}" Margin="0,0,2,0" IsEditable="True"
                                  ItemsSource="{Binding Titles}" SelectedItem="{Binding SelectedTitle}"/>
                        
                        <TextBlock Text="الاسم:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <TextBox Width="180" Style="{StaticResource InputFieldStyle}" Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>

                        <TextBlock Text="النوع:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <RadioButton Content="ذكر" GroupName="GenderGroup" IsChecked="{Binding IsMaleSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton Content="أنثى" GroupName="GenderGroup" IsChecked="{Binding IsFemaleSelected}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="العمر:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="50" Style="{StaticResource InputFieldStyle}" Text="{Binding AgeValueInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,2,0"/>
                        <ComboBox Width="70" Style="{StaticResource ComboBoxStyle}" Margin="0,0,20,0"
                                  ItemsSource="{Binding AgeUnits}" SelectedItem="{Binding SelectedAgeUnit}"/>

                        <TextBlock Text="الرقم الطبي:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="180" Style="{StaticResource InputFieldStyle}" Text="{Binding MedicalRecordNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="المحمول:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="150" Style="{StaticResource InputFieldStyle}" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>

                        <TextBlock Text="الإيميل:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="200" Style="{StaticResource InputFieldStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- بيانات الطبيب أو الجهة -->
            <Border Style="{StaticResource SectionBorderStyle}">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="بيانات الطبيب أو الجهة" Style="{StaticResource SectionHeaderStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="جهة التحويل:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Width="250" Style="{StaticResource ComboBoxStyle}" Margin="0,0,10,0"
                                  ItemsSource="{Binding ReferringPhysicians}" DisplayMemberPath="Name" 
                                  SelectedItem="{Binding SelectedReferringPhysician}" IsEditable="True"
                                  Text="{Binding CustomReferringPhysician, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- زر الحفظ -->
            <Button Content="حفظ المريض وتحاليله"
                    Width="200" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center"
                    Command="{Binding SavePatientCommand}"
                    Background="{StaticResource AccentOrange}" Foreground="White" FontSize="16" FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="4" BlurRadius="8" Direction="270"/>
                </Button.Effect>
            </Button>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10,50,0,0" Width="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="قائمة التحاليل" Style="{StaticResource SectionHeaderStyle}" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,5,0">
                    <TextBlock Text="التحاليل المتاحة:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <Border BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" CornerRadius="3">
                        <ListView Height="400" ItemsSource="{Binding AvailableTests}" SelectedItem="{Binding SelectedAvailableTest}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  BorderThickness="0" Width="215">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FlowDirection="LeftToRight" TextTrimming="CharacterEllipsis" Width="185"> 
                                           <Run Text="{Binding Name}"/>
                                           <Run Text=" ("/>
                                           <Run Text="{Binding Abbreviation, FallbackValue=''}"/>
                                           <Run Text=")"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding AddSelectedTestCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="التحاليل المختارة لهذا المريض:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedTests.Count, StringFormat='({0})'}" 
                                   HorizontalAlignment="Right" Margin="5,0,0,0"/>
                    </StackPanel>
                    <Border BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" CornerRadius="3">
                        <ListView Height="400" ItemsSource="{Binding SelectedTests}" SelectedItem="{Binding SelectedTestForRemoval}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  BorderThickness="0" Width="215">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FlowDirection="LeftToRight" TextTrimming="CharacterEllipsis" Width="185"> 
                                           <Run Text="{Binding Name}"/>
                                           <Run Text=" ("/>
                                           <Run Text="{Binding Abbreviation, FallbackValue=''}"/>
                                           <Run Text=")"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding RemoveSelectedTestCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>
                    </Border>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="إضافة تحليل" Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding AddSelectedTestCommand}"/>
                <Button Content="حذف تحليل" Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding RemoveSelectedTestCommand}"/>
                <Button Content="إضافة الكل" Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding AddAllTestsCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>