<!-- ReportPreviewWindow.xaml - Updated to use SharedResources.xaml -->
<Window x:Class="LABOGRA.Views.Print.ReportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABOGRA.Views.Print"
        mc:Ignorable="d"
        Title="Patient Report Preview" Height="750" Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="{StaticResource PageBackgroundBrush}">
    <!-- استخدام لون الخلفية العام -->

    <Window.Resources>
        <!-- 
            تم نقل الأنماط المشابهة إلى SharedResources.xaml.
            سنقوم بتكييف الأنماط المتبقية أو استخدام الأنماط العامة.
        -->
        <Style x:Key="ReportHeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource GlobalLabelStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
        </Style>
        <Style x:Key="ReportValueTextStyle" TargetType="TextBlock" BasedOn="{StaticResource GlobalLabelStyle}">
            <Setter Property="Margin" Value="0,3,5,3"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <!-- يبقى هذا التخصيص إذا كان ضروريًا -->
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <!-- استخدام لون نص ثانوي للقيم -->
        </Style>

        <!-- نمط خاص لأزرار الإجراءات في هذه النافذة، يرث من النمط الأساسي -->
        <Style x:Key="ReportActionButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Patient Lab Results Report" FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"
                   Foreground="{StaticResource PrimaryHueDarkBrush}"/>

        <Border Grid.Row="1" BorderBrush="{StaticResource DefaultBorderBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,15"
                Background="{StaticResource ControlBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="ID:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="PatientGeneratedIdTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم المريض:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PatientNameTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="العمر:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="AgeTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="النوع:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="GenderTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="الرقم الطبي:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="MedicalRecordNumberTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="الطبيب المعالج:" Style="{StaticResource ReportHeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReferringPhysicianTextBlock" Style="{StaticResource ReportValueTextStyle}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2" Text="Test Results:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" FlowDirection="LeftToRight"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

        <DataGrid Grid.Row="3" x:Name="ResultsDataGrid" 
                  ItemsSource="{Binding}" 
                  Style="{StaticResource GlobalDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource GlobalDataGridColumnHeaderStyle}"
                  CellStyle="{StaticResource GlobalDataGridCellStyle}"
                  RowStyle="{StaticResource GlobalDataGridRowStyle}"
                  FlowDirection="LeftToRight">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Test Name" Binding="{Binding Test.Name}" Width="3*" />
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="2*" />
                <DataGridTextColumn Header="Unit" Binding="{Binding ResultUnit}" Width="1*" />
                <DataGridTextColumn Header="Reference Range" Binding="{Binding ReferenceRange}" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="PrintButton" Content="Print Report" Click="PrintButton_Click" 
                    Style="{StaticResource ReportActionButtonStyle}" 
                    Background="{StaticResource SecondaryHueMidBrush}"/>
            <Button x:Name="SavePdfButton" Content="Save as PDF" Click="SavePdfButton_Click" 
                    Style="{StaticResource ReportActionButtonStyle}" 
                    Background="{StaticResource PrimaryHueMidBrush}"/>
            <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" 
                    Style="{StaticResource ReportActionButtonStyle}" 
                    Background="{StaticResource ErrorBrush}"/>
        </StackPanel>

        <Border Grid.Row="5" Background="#99FFFFFF" Visibility="Collapsed" x:Name="LoadingOverlay">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Processing..." FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>