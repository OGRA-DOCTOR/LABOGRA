<!-- اسم الملف: ReportPreviewWindow.xaml -->
<Window x:Class="LABOGRA.Views.Print.ReportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABOGRA.Views.Print"
        mc:Ignorable="d"
        Title="Patient Report Preview" Height="750" Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderTextStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueTextStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,3,5,3"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Patient Lab Results Report" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- صف المريض والرقم التعريفي -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="ID:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="PatientGeneratedIdTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم المريض:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PatientNameTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>

                <!-- صف الجنس والعمر -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="العمر:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="AgeTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="النوع:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="GenderTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>

                <!-- صف الطبيب والرقم الطبي -->
                <TextBlock Grid.Row="2" Grid.Column="2" Text="الرقم الطبي:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="MedicalRecordNumberTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="الطبيب المعالج:" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReferringPhysicianTextBlock" Style="{StaticResource ValueTextStyle}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2" Text="Test Results:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" FlowDirection="LeftToRight"/>
        <DataGrid Grid.Row="3" x:Name="ResultsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" CanUserAddRows="False" BorderBrush="LightGray" BorderThickness="1" FlowDirection="LeftToRight">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Test Name" Binding="{Binding Test.Name}" Width="3*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="2*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding ResultUnit}" Width="1*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                <DataGridTextColumn Header="Reference Range" Binding="{Binding ReferenceRange}" Width="3*" ElementStyle="{StaticResource {x:Type TextBlock}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="PrintButton" Content="Print Report" Click="PrintButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Foreground="White"/>
            <Button x:Name="SavePdfButton" Content="Save as PDF" Click="SavePdfButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#2196F3" Foreground="White"/>
            <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Style="{StaticResource ActionButtonStyle}" Background="#f44336" Foreground="White"/>
        </StackPanel>
        <Border Grid.Row="5" Background="#99FFFFFF" Visibility="Collapsed" x:Name="LoadingOverlay">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Processing..." FontSize="18" FontWeight="SemiBold"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>