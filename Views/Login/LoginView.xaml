<!-- الإصدار: 2 (لهذا الملف - إزالة CheckBox "Remember Me") -->
<!-- اسم الملف: LoginView.xaml -->
<!-- الوصف: واجهة تسجيل الدخول مع إزالة وظيفة "تذكرني". -->
<Window x:Class="LABOGRA.Views.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:LABOGRA.Helpers"
        mc:Ignorable="d"
        Title="Login - OGRALAB"
        Height="650" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize"
        FlowDirection="RightToLeft">

    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
    </Window.InputBindings>

    <Border Background="White" CornerRadius="15" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- شريط العنوان -->
            <Grid Grid.Row="0" Background="#673AB7" Height="40" MouseDown="Window_MouseDown_Drag">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="OGRALAB"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="—"
                            Command="{Binding MinimizeCommand}"
                            Width="30" Height="30"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White"/>
                    <Button Content="✕"
                            Command="{Binding CloseCommand}"
                            Width="30" Height="30"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White"/>
                </StackPanel>
            </Grid>

            <!-- المحتوى الرئيسي -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- شعار واسم البرنامج -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Viewbox Width="120" Height="120" Margin="0,0,0,10">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12,1.5L10.2,3.3L11.4,4.5C11.4,4.5 12.5,3.9 13.6,5.1C14.7,6.2 14.1,7.3 14.1,7.3L15.3,8.5L17.1,6.7L15.8,5.5C15.8,5.5 15.5,5.2 15.4,4.8C15.4,4.4 15.5,4.1 15.7,3.8C16,3.5 16.5,3.3 17,3.5L18.3,2.3C18.5,2 18.3,1.6 18,1.5L12,1.5M8.3,4.8L7.1,6L7.8,6.7L6.5,7.9L7.8,9.1L9.1,7.8L10.3,9L9.6,9.7L10.8,10.9L11.5,10.2L17.5,16.1L16,17.5L14.1,15.6C8.6,18.2 4.4,15.3 4.2,15.2L1.5,17.9L2.3,18.7L3,18L6.5,21.5L7.8,20.3L3.5,16L5.3,14.2C5.3,14.2 8.7,17.7 14.5,14.7L14,14.1C13.9,14.2 10,16.9 6.1,11.2C6.1,11.2 8.6,7.5 11.9,9.8L8.3,6.2L9.6,5L8.8,4.2L8.3,4.8M14.5,11.6L12.8,9.9L14.1,8.6L15.8,10.3L14.5,11.6Z"
                                  Fill="#4CAF50"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Medical Laboratory" FontSize="20" FontStyle="Italic" Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="OGRALAB" FontSize="48" FontWeight="Bold" Foreground="#673AB7" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Management System" FontSize="20" FontStyle="Italic" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Username -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Username" FontSize="20" FontWeight="SemiBold" Foreground="#3F51B5"/>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="👤" FontSize="26" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding Usernames}"
                                  SelectedItem="{Binding SelectedUsername, Mode=TwoWay}"
                                  Text="{Binding SelectedUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  IsEditable="True"
                                  Height="45" FontSize="18"
                                  BorderThickness="0,0,0,1" BorderBrush="#BBDEFB"
                                  Background="#F5F9FF" Padding="10,5">
                            <ComboBox.Resources>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Padding" Value="6"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </Grid>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Password" FontSize="20" FontWeight="SemiBold" Foreground="#3F51B5"/>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🔒" FontSize="26" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <PasswordBox Grid.Column="1"
                                     helpers:PasswordBoxAssistant.BindPassword="True"
                                     helpers:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding PasswordBoxVisibility}"
                                     Height="45" FontSize="18"
                                     BorderThickness="0,0,0,1" BorderBrush="#BBDEFB"
                                     Background="#F5F9FF" Padding="10,5"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding VisiblePasswordText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Visibility="{Binding PasswordTextVisibility}"
                                 Height="45" FontSize="18"
                                 BorderThickness="0,0,0,1" BorderBrush="#BBDEFB"
                                 Background="#F5F9FF" Padding="10,5"/>
                    </Grid>
                </StackPanel>

                <!-- Show Password (فقط "إظهار كلمة المرور") -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <CheckBox Content="Show Password"
                              IsChecked="{Binding IsPasswordVisible, Mode=TwoWay}"
                              FontSize="20" Foreground="#009688" Margin="0,0,0,0"/>
                    <!-- تم إزالة CheckBox الخاص بـ "Remember Me" من هنا -->
                    <!-- <CheckBox Content="Remember Me"
                              IsChecked="{Binding RememberMe, Mode=TwoWay}"
                              FontSize="20" Foreground="#009688"/> -->
                </StackPanel>

                <!-- Login Button -->
                <Button Grid.Row="4"
                        Command="{Binding LoginCommand}"
                        Content="Login"
                        Width="250" Height="55"
                        Background="#4CAF50" Foreground="White"
                        FontSize="22" FontWeight="Bold"
                        HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" BlurRadius="8" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>