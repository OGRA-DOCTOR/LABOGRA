<Window x:Class="LABOGRA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABOGRA"
        xmlns:views="clr-namespace:LABOGRA.Views.Patients"
        mc:Ignorable="d"
        Title="البرنامج الرئيسي" Height="600" Width="900" WindowStartupLocation="CenterScreen" Background="#EAF2FA">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- الشريط الجانبي -->
        <StackPanel Grid.Column="0" Background="#1E90FF" VerticalAlignment="Stretch" Margin="0">
            <Border Height="50"/>
            <Button Content="إدارة المرضى" Name="AddPatientsButton" Height="50" Background="#4682B4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5" Click="AddPatientsButton_Click"/>
            <Button Content="تسجيل النتائج" Name="RecordResultsButton" Height="50" Background="#4682B4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5" Click="RecordResultsButton_Click"/>
            <Button Content="طباعة النتائج" Name="PrintResultsButton" Height="50" Background="#4682B4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5" Click="PrintResultsButton_Click"/>
            <Button Content="بحث وتعديل" Name="SearchEditButton" Height="50" Background="#4682B4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5" Click="SearchEditButton_Click"/>
            <Button Content="الإعدادات" Name="SettingsButton" Height="50" Background="#4682B4" Foreground="White" FontSize="16" FontWeight="Bold" Margin="5" Click="SettingsButton_Click"/>
        </StackPanel>

        <!-- منطقة العرض -->
        <Border Grid.Column="1" Background="White" Margin="0" CornerRadius="10,0,0,10">
            <ContentControl x:Name="MainContentArea" Margin="10"/>
        </Border>
    </Grid>
</Window>
